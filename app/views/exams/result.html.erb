<div class="center">
    <div class="question">
      <p>問.&emsp;<%= @exam.question %></p>
    </div>
    <div class="message">
      <%= @msg %>
    </div>
    <br>
    <div class="next_question_button">
      <%= form_tag exams_question_path do %>
        <%= hidden_field_tag(:next_question) %>
        <%= hidden_field_tag(:responseid, @responseid) %>
        <%= hidden_field_tag(:examids, @examids) %>
        <%= submit_tag '次の問題へいく' %>
      <% end %>
    </div>
</div>
<%= @examids %>
